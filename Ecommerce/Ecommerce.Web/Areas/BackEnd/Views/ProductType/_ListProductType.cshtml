@using Ecommerce.Web.Models;
@using PagedList;
@using PagedList.Mvc;
@model List<Ecommerce.Domain.Model.LoaiSP>


<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
        <tr>
            <th>
                <input type="checkbox" onclick="toggle(this)" />
            </th>
            <th class="text-center">@Html.DisplayNameFor(model => model.First().TenLoai)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.First().Alias)</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="lstdel" value="@item.MaLoai" />
                </td>
                <td class="center">@item.TenLoai</td>
                <td class="center">@item.Alias</td>
                <td class="center">
                    <a class="btn btn-info" href="@Url.Action("CrudProductType_View", "ProductType", new { id = item.MaLoai })">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        Sửa
                    </a>
                    <a class="btn btn-danger" href='javascript:DeleteProductType("@Url.Action("DeleteProductType", "ProductType")","@item.MaLoai")'>
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
