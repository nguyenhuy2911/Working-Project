@using Ecommerce.Web.Models;
@using PagedList;
@using PagedList.Mvc;
@model List<Ecommerce.Domain.Model.HangSanXuat>


<table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
        <tr>
            <th>
                <input type="checkbox" onclick="toggle(this)" />
            </th>
            <th class="text-center">@Html.DisplayNameFor(model => model.First().TenHang)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.First().Alias)</th>
            <th class="text-center">@Html.DisplayNameFor(model => model.First().IsHomePage)</th>

            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input type="checkbox" name="lstdel" value="@item.HangSX" />
                </td>
                <td class="center">@item.TenHang</td>
                <td class="center">@item.Alias</td>
                <td>
                    <div class="material-switch">
                        <input name="IsHomePage" type="checkbox" checked="@item.IsHomePage">
                        <label for="IsHomePage" class="label-success"></label>
                    </div>
                </td>
                <td class="center">
                    <a class="btn btn-info" href="@Url.Action("CrudManufacturer_View", "Manufacturer", new {Area= "BackEnd", id = item.HangSX.Trim() })">
                        <i class="glyphicon glyphicon-edit icon-white"></i>
                        Sửa
                    </a>
                    <a class="btn btn-danger" href='javascript:DeleteManufacture("@Url.Action("DeleteManufacturer", "Manufacturer", new {Area= "BackEnd" })","@item.HangSX.Trim()")'>
                        <i class="glyphicon glyphicon-trash icon-white"></i>
                        Xóa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
