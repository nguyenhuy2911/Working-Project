@model Ecommerce.Domain.Model.SanPham
@using Ecommerce.Web.Helper
<div class="product-item">
    @if (Model.GiaTien < Model.GiaGoc)
    {
        <div class="ribbon green"><span>Giảm</span></div>
    }
    @if (Model.isnew == true)
    {
        <div class="ribbon blue"><span>Mới nhập</span></div>
    }
    @if (Model.ishot == true)
    {
        <div class="ribbon red"><span>Hot</span></div>
    }
    <div class="image">
        <a href="@Url.RouteUrl("ProductDetail", new { id = @Model.MaSP, alias =  Model.TenSP.GenerateFriendlyName() })" title="@Model.TenSP">
            <img alt="@Model.TenSP" src="@Url.Content("~/images/products/")@Model.AnhDaiDien" data-echo="@Url.Content("~/images/products/")@Model.AnhDaiDien" />
        </a>
    </div>
    <div class="body">
        <div class="label-discount clear"></div>
        <div class="title">
            <a href="@Url.RouteUrl("ProductDetail", new { id = @Model.MaSP, alias =  Model.TenSP.GenerateFriendlyName()})" title="@Model.TenSP">@Model.TenSP</a>
        </div>
        <div class="brand">@Model.HangSanXuat.TenHang</div>
    </div>
    <div class="prices">
        @if (Model.GiaTien < Model.GiaGoc)
        {
            <div class="price-prev">@string.Format("{0:0,0}", Model.GiaGoc)  VNĐ</div>
        }
        <div class="price-current text-right"> @string.Format("{0:0,0}", Model.GiaTien)  VNĐ</div>
    </div>
    <div class="hover-area">
        <div class="add-cart-button">
            <a href="javascript:void(0)" class="le-button" onclick="Addcart('@Model.MaSP',1)" title="@Model.TenSP">Mua ngay</a>
        </div>
        <div class="wish-compare">
            <a class="btn-add-to-wishlist" href="#">Yêu thích</a>
            <a class="btn-add-to-compare" href="#">So sánh</a>
        </div>
    </div>
</div>
