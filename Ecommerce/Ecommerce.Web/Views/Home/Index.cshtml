@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutFrontEnd.cshtml";
}

@Html.Action("TopContentner", "Display")

<script src="@Url.Content("~/js/loadmore.js")"></script>
<div id="products-tab" class="wow fadeInUp">
    <div class="container">
        <div class="tab-holder">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs">

                <li class="active"><a href="#new-arrivals" data-toggle="tab">Sản phẩm bán chạy</a></li>
                <li><a href="#top-sales" data-toggle="tab">Giảm giá</a></li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <div class="tab-pane active" id="new-arrivals">
                    <div class="product-grid-holder">
                        <div id="spmoiload">
                            @Html.Action("ItemsBestSeller", "SanPham")
                        </div>
                    </div>
                    <div class="loadmore-holder text-center">
                        <div id="spmoilink">
                            <a class="btn-loadmore" href='javascript:LoadMorePro(4,"SPMoiNhap","#spmoilink","#spmoiload")'>
                                <i class="fa fa-plus"></i>
                                Tải thêm
                            </a>
                        </div>
                    </div>
                </div>

                <div class="tab-pane" id="top-sales">
                    <div class="product-grid-holder">
                        <div id="spkmload">
                            @Html.Action("ItemsPromotion", "SanPham")
                        </div>
                    </div>
                    <div class="loadmore-holder text-center clear">
                        <div id="spkmlink">
                            <a class="btn-loadmore" href='javascript:LoadMorePro(4,"SPKhuyenMai","#spkmlink","#spkmload")'>
                                <i class="fa fa-plus"></i>
                                Tải thêm
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Action("ItemsNewest", "SanPham")

@Html.Action("ProductsByBrand", "SanPham")

@Html.Action("ItemsRecentlyView", "SanPham")